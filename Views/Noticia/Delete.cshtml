@model Noticia

@{
    ViewData["Title"] = "Excluir Notícia";
}

<h2>Excluir Notícia</h2>

<h3>Tem certeza de que deseja excluir esta notícia?</h3>

<div>
    <h4>Notícia</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <dt class="col-sm-2">
            Texto
        </dt>
        <dd class="col-sm-10">
            @Model.Texto
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
